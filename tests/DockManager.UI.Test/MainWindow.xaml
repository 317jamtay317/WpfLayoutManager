<Window x:Class="DockManager.UI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockManagerTest"
        xmlns:controls="clr-namespace:DockManager.Controls;assembly=DockManager.Controls"
        xmlns:test="clr-namespace:DockManager.UI.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <controls:LayoutManager>
            <controls:LayoutManager.ContentPanels>
                <controls:DisplayPanels>
                    <controls:LayoutPane Caption="First">
                        <test:TestView />
                    </controls:LayoutPane>
                    <controls:LayoutPane Caption="Second">
                        <test:TestView />
                    </controls:LayoutPane>
                    <controls:LayoutPane Caption="Third">
                        <test:TestView Foreground="Black"/>
                    </controls:LayoutPane>
                </controls:DisplayPanels>
            </controls:LayoutManager.ContentPanels>
        </controls:LayoutManager>
    </Grid>
</Window>
